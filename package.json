{
  "name": "@adobe-commerce/aio-toolkit",
  "version": "1.0.0",
  "description": "Backend toolkit for Adobe App Builder applications - standardized tools and utilities",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:fast": "jest --passWithNoTests --silent",
    "pre-add": "echo 'ðŸ”¨ Pre-add validation...' && npm run build && echo 'âœ… Ready to add files!'",
    "safe-add": "npm run pre-add && git add",
    "validate:commit": "npm run type-check && npm run lint:fix && npm run format && npm run test:fast",
    "validate:push": "npm run format:check && npm run lint && npm run type-check && npm run test:ci && npm run build",
    "security:audit": "npm audit --audit-level=moderate",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "adobe",
    "app-builder",
    "toolkit",
    "backend",
    "utilities",
    "typescript",
    "aio"
  ],
  "author": "Hitarth Pattani <hitarth@example.com>",
  "dependencies": {
    "@adobe/aio-lib-ims": "^7.0.2",
    "@adobe/aio-sdk": "^5.0.0",
    "got": "^11.8.6",
    "graphql": "^16.11.0",
    "node-fetch": "^2.7.0",
    "oauth-1.0a": "^2.2.6",
    "openwhisk": "^3.21.8"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/graphql": "^14.2.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe-commerce/aio-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/adobe-commerce/aio-toolkit/issues"
  },
  "homepage": "https://github.com/adobe-commerce/aio-toolkit#readme"
}
